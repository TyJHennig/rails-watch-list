
<div class="banner" >
  <div class="container">
    <div class="d-grid gap-2">
      <div>
        <h1>Welcome to your very own movie database </h1>
        <a href="/lists/new" class="btn btn-warning btn-lg">Make a list</a>
      </div>
    </div>
  </div>
</div>

<div class="container justify-content-flex">
  <% @lists.each do |list| %>
    <div class="card-deck">
      <div class="card col-12 col-lg-8">
        <% if list.photo.attached? %>
            <img class="card-img-top" src=<%= cl_image_tag(list.photo.key,
            width: 400, height: 300, crop: :fill) %> alt="Card image cap">
        <% else %>
          <img class="card-img-top" src= "https://res.cloudinary.com/doizo65a2/image/upload/v1657627361/cld-sample-2.jpg"
          width= "400px" height= "300px" crop= "fit" alt="Card image cap">
        <% end %>
        <div class="card-body">
          <h5 class="card-title">ðŸŽ¥ <%= list.name %></h5>
          <p class="card-text">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Natus illum enim at. Rerum, qui alias? Molestiae suscipit, ipsum tempora quaerat ab, nobis et quia autem necessitatibus aperiam quisquam sunt a.</p>
          <%= link_to "Check it out", list_path(list), class: "btn btn-primary"  %>
          <p class="card-text"><small class="text-muted">Last updated <%= rand(1..30) %> mins ago</small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
